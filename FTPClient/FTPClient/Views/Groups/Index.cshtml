@model IEnumerable<FTPClient.Models.Group>

@if(ViewBag.canCreateGroup)
{
    <p>
        @Html.ActionLink("Utwórz", "Create")
    </p>
}
<table class="table">
    <tr>
        <th>
            Nazwa
        </th>
        <th>
            Operacje
        </th>
    </tr>

@foreach (var item in ViewBag.UserGroups) {
    <tr>
        <td>
            item.Name
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id })
            @if(item.canDelete)
            {
                @Html.ActionLink("Usuń", "Delete", new { id=item.Id })
            }
            @if(item.canLeave)
            {
                @Html.ActionLink("Opuść", "Leave", new { id=item.Id }) 
            }
        </td>
    </tr>
}

</table>
