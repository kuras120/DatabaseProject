@{
    ViewBag.Title = "FTP Service";
}

<div class="jumbotron">
    <h1>FTP Service</h1>
    <p class="lead">
        Projekt realizowany w ramach przedmiotu Bazy Danych 2
    </p>
    <div class="row">
        <div class="col-md-6">
            @using (Html.BeginForm("Login", "Account"))
            {
            <div class="input-group">
                <span class="input-group-addon glyphicon glyphicon-user"></span>
                @Html.TextBox("loginInput",
                null,
                new {
                id = "login-input",
                @class = "form-control",
                @placeholder="Login"
                })
            </div>
            <div class="input-group">
                <span class="input-group-addon glyphicon glyphicon-lock"></span>
                @Html.Password("passwordInput",
                null,
                new {
                id = "password-input",
                @class = "form-control",
                @placeholder="Hasło"
                })
            </div>
            <button type="submit" class="btn btn-default">Zaloguj</button>
            }

          
            </div>
        <div class="col-md-6">
            @using (Html.BeginForm("Signup", "Account"))
            {
            <div class="input-group">
                <span class="input-group-addon glyphicon glyphicon-user"></span>
                @Html.TextBox("loginInput",
                null,
                new {
                id = "login-input",
                @class = "form-control",
                @placeholder="Login"
                })
            </div>
            <div class="input-group">
                <span class="input-group-addon glyphicon glyphicon-lock"></span>
                @Html.Password("passwordInput",
                null,
                new {
                id = "password-input",
                @class = "form-control",
                @placeholder="Hasło"
                })
            </div>
            <button type="submit" class="btn btn-default">Zaloguj</button>
            }
        </div>
    </div>
</div>
